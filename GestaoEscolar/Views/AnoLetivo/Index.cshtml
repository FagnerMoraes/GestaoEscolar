@model IEnumerable<GestaoEscolar.Models.AnoLetivo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLista.cshtml";
}


<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <p>
            <a href="@Url.Action("Adicionar", "AnoLetivo")" class="btn btn-block btn-lg btn-success"><span class="fa fa-plus"></span><span>&nbsp;</span>Novo Ano Letivo</a>
        </p>
        <div class=" panel panel-success">
            <div class="panel-heading">
                <h4>Ano Letivo</h4>
            </div>
            <table class="table table-hover">
                <tr>
                    <th>
                        Ano
                    </th>
                    <th>
                        Media
                    </th>
                    <th>
                        Dias Letivos
                    </th>

                    <th>
                        AÇÕES
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ano)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MediaAno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QtdDiasLetivosAno)
                        </td>

                        <td>
                            <a class="btn btn-default" title="Editar" href="@Url.Action("Editar", "AnoLetivo", new {id = item.Id})">
                                <span class="fa fa-edit"></span>
                            </a>

                            <a class="btn btn-default" title="Detalhes" href="@Url.Action("Detalhes", "AnoLetivo", new {id = item.Id})">
                                <span class="fa fa-list-alt"></span>
                            </a>

                            <a class="btn btn-primary btn-danger confirm" title="Excluir" href="@Url.Action("Excluir", "AnoLetivo", new {id = item.Id})">
                                <span class="fa fa-trash"></span>
                            </a>


                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.confirm.js"></script>
<script>
    $(".confirm").confirm({
        text: "Tem certeza que deseja excluir?",
        confirmButton: "Sim",
        cancelButton: "Não"
    });
</script>