@model PagedList.IPagedList<GestaoEscolar.Models.Aluno>
@using PagedList.Mvc

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";

}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.11.4.js"></script>

<script type="text/javascript">
    $(function () {
        $("#termoBusca").autocomplete({
            source: '@Url.Action("GetAlunos")'
        });
    });
</script>


<div class="panel panel-heading">
    <strong><span class="fa fa-cog"></span><span>&nbsp;</span>Gerenciar Aluno</strong>
</div>

<div class="panel-body panel-scroll">

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <p>
                <a href="@Url.Action("Adicionar", "Aluno")" class="btn btn-block btn-lg btn-success"><span class="fa fa-plus"></span><span>&nbsp;</span>Novo Aluno</a>
            </p>
            <div class="panel panel-success">

                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-4">
                            <h5>Alunos Cadastrados</h5>
                        </div>
                        <div class="col-md-8">
                            @using (@Html.BeginForm("Index", "Aluno", FormMethod.Post))
                            {
                                <div class="input-group">
                                    <input type="text" class="form-control" name="termoBusca" id="termoBusca" placeholder="Buscar por...">

                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-default">Buscar <span class="fa fa-search"></span></button>
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-hover">
                        <tr>
                            <th>
                                Nome Aluno
                            </th>
                            <th>
                                Nascimento
                            </th>

                            <th>
                                AÇÕES
                            </th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataNascimento)
                                </td>

                                <td>
                                    <a class="btn btn-default" title="Editar" href="@Url.Action("Editar","Aluno", new {id = item.Id})">
                                        <span class="fa fa-edit"></span>
                                    </a>

                                    <a class="btn btn-default" title="Detalhes" href="@Url.Action("Detalhes","Aluno", new {id = item.Id})">
                                        <span class="fa fa-list-alt"></span>
                                    </a>

                                    <a class="btn btn-primary btn-danger confirm" title="Excluir" href="@Url.Action("Excluir","Aluno", new {id = item.Id})">
                                        <span class="fa fa-trash"></span>
                                    </a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <div class="panel-footer">
                    <div class="text-center">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { pagina = page }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.confirm.js"></script>
<script>
    $(".confirm").confirm({
        text: "Tem certeza que deseja excluir?",
        confirmButton: "Sim",
        cancelButton: "Não"
    });
</script>