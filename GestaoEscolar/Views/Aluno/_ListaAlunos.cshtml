@model PagedList.IPagedList<GestaoEscolar.Models.Aluno>

@using PagedList.Mvc

<div id="DivListaAlunos">
    <div class="panel-body">
        <table class="table table-hover">
            <tr>
                <th>
                    Nome Aluno
                </th>
                <th>
                    Nascimento
                </th>

                <th>
                    AÇÕES
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>

                    <td>
                        <a class="btn btn-default" title="Editar" href="@Url.Action("Editar","Aluno", new {id = item.Id})">
                            <span class="fa fa-edit"></span>
                        </a>

                        <a class="btn btn-default" title="Detalhes" href="@Url.Action("Detalhes","Aluno", new {id = item.Id})">
                            <span class="fa fa-list-alt"></span>
                        </a>

                        <a class="btn btn-primary btn-danger confirm" title="Excluir" href="@Url.Action("Excluir","Aluno", new {id = item.Id})">
                            <span class="fa fa-trash"></span>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        <div class="text-center">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { pagina = page }))
        </div>
    </div>
</div>





