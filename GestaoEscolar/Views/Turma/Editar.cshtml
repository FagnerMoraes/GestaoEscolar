@model GestaoEscolar.Models.Turma

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
}


<script type="text/javascript">
    $(function () {
        $('#Serie').val("@Model.Serie");
        $('#NivelTurma').val("@Model.NivelTurma");
        $('#HorarioFuncionamento').val("@Model.HorarioFuncionamento");
        $('#ModalidadeEnsino').val("@Model.ModalidadeEnsino");
    });
    $(document).ready(function () {
        $('#EscolaId').addClass("form-control");
        $('#FuncionarioId').addClass("form-control");

    });
</script>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="panel panel-heading">
        <div class="row">
            <div class="col-sm-2">
                <strong><span class="fa fa-edit"></span><span>&nbsp;</span>Turma</strong>
            </div>
            @Html.Partial("_MenuForm")
            <div class="col-sm-3">
                <h5><strong>Atenção!</strong> O campo com <i class="fa fa-asterisk text-danger"></i>é obrigatório</h5>
            </div>
        </div>
    </div>
    <div class="panel-body panel-scroll">
        @Html.Partial("_PartialFormTurma");
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
