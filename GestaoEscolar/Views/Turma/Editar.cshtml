@model GestaoEscolar.Models.Turma

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
}

<script>
    $(function () {
        $('#Serie').val("@Model.Serie");
        $('#NivelTurma').val("@Model.NivelTurma");
        $('#HorarioFuncionamento').val("@Model.HorarioFuncionamento");
        $('#ModalidadeEnsino').val("@Model.ModalidadeEnsino");
    });

    $(document).ready(function () {
        $('#EscolaId').addClass("form-control");
        $('#FuncionarioId').addClass("form-control");
    });

</script>

<div class="panel panel-heading">
    <strong><span class="glyphicon glyphicon-edit"></span><span>&nbsp;</span>Editar Turma</strong>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="panel-body panel-scroll">
        @Html.Partial("_PartialFormTurma");
    </div>

    <div class="panel panel-footer">
        <div class="row">
            <div class="col-sm-5">
                <h5><strong>Atenção!</strong> O campo com <i class="fa fa-asterisk text-danger"></i>é obrigatório</h5>
            </div>
            <div class="col-sm-3 col-sm-offset-1">
                <a class="btn btn-block btn-lg btn-danger" href="@Url.Action("Index")"><span class="glyphicon glyphicon-remove"></span>Cancelar</a>
            </div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-block btn-lg btn-success" value="Adicionar"><span class="glyphicon glyphicon-floppy-disk"></span>Salvar</button>
            </div>
        </div>
    </div>


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
