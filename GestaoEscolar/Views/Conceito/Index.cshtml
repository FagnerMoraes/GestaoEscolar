@model IEnumerable<GestaoEscolar.Models.Conceito>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
}
<script>
    $(document).ready(function () {
        $('#turmaId').addClass("form-control");
        $('#DisciplinaId').addClass("form-control");
    });
</script>


<div class="panel panel-heading">
    <strong><span class="glyphicon glyphicon-cog"></span><span>&nbsp;</span>Conceito</strong>
</div>

<div class="panel-body">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class=" panel panel-success">

                <div class="panel-heading">
                    <p>
                        <a href="@Url.Action("ConceitoAluno", "Conceito")" class="btn btn-block btn-lg btn-success"><span class="fa fa-plus"></span><span>&nbsp;</span>Novo Conceito</a>
                    </p>


                    @using (@Html.BeginForm(FormMethod.Get))
                    {

                        <div>
                            @Html.DropDownList("turmaId", (SelectList)ViewBag.turmaId, "Selecione a turma", new { onchange = "this.form.submit();" })
                        </div>

                        <div>
                            @Html.DropDownList("DisciplinaId", (SelectList)ViewBag.DisciplinaId, "Selecione a disciplina", new { onchange = "this.form.submit();" })
                        </div>
                    }

                </div>
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>
                            Turma
                        </th>
                        <th>
                            Aluno
                        </th>

                        <th>
                            AÇÕES
                        </th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Matricula.Turma.NomeTurma)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Matricula.Aluno.Nome)
                            </td>

                            <td>
                                <a class="btn btn-primary btn-warning" title="Editar" href="@Url.Action("GerarHistoricoAluno", "HistoricoAluno", new { item.Matricula.Aluno.Id })">
                                    <span class="fa fa-edit"></span>
                                </a>

                                @*<a class="btn btn-primary btn-info" title="Detalhes" href="@Url.Action("Detalhes", "Conceito", new { id = item.Id, disciplinaId = item.DisciplinaId })">
                                        <span class="glyphicon glyphicon-list-alt"></span>
                                    </a>

                                    <a class="btn btn-primary btn-danger" title="Excluir" href="@Url.Action("Excluir", "Conceito", new { id = item.Id })">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>*@
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>


