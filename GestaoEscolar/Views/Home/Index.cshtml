@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLista.cshtml";
}


<div class="row">
    <div class="col-lg-4 col-sm-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-child fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.ListaAlunos</div>
                        <div>Não Matriculados</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("GerenciarMatriculas", "Matricula")">
                <div class="panel-footer">
                    <span class="pull-left">Gerenciar Matriculas</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-sm-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-bank fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.ListaTurmas</div>
                        <div>Turmas<br /> Cadastradas</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index","Turma")">
                <div class="panel-footer">
                    <span class="pull-left">Gerenciar Turmas</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-sm-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-female fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.ListaFuncionarios</div>
                        <div>Professores<br /> Cadastrados</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index","Funcionario")">
                <div class="panel-footer">
                    <span class="pull-left">Gerenciar Professores</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>

