
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
}

<div class="panel panel-heading">
    <strong><span class="fa fa-plus"></span><span>&nbsp;</span>Declaração de Matricula</strong>
</div>

@using (Html.BeginForm("ModalDecMatricula", "Relatorio", FormMethod.Get))
{
    <div class="panel-body">
        <div class="form-group">
            <label class="control-label">Turmas:</label>
            @Html.DropDownList("TurmaId", (SelectList)ViewBag.TurmaId, "SELECIONE A TURMA", new { @class = "form-control", onchange = "this.form.submit();" })
        </div>

        <div class="form-group">
            <label class="control-label">Alunos:</label>
            @Html.DropDownList("AlunoId", (SelectList)ViewBag.AlunoId, "SELECIONE O ALUNO", new { @class = "form-control", onchange = "this.form.submit();" })
        </div>
    </div>

    <div class="modal-footer">
        <a class="btn btn-primary" href="@Url.Action("DeclaracaoMatricula", "Relatorio", new {id = @Html.Value("AlunoId") })">Gerar Declaração</a>
        <a class="btn btn-default" title="Cancelar" href="@Url.Action("Index", "Relatorio")">Cancelar</a>
    </div>

}
