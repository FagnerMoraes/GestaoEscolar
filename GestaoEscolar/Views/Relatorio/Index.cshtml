@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLista.cshtml";
}




<div class="row">
    <div class="col-sm-4">
        @using (@Html.BeginForm("Index", "Aluno", FormMethod.Post))
            {
            <div class="editor-label">
                <strong>Localizar relatório</strong>
            </div>
            <div class="input-group">
                <input type="text" class="form-control" name="termoBusca" id="termoBusca" placeholder="Buscar por...">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button>
                </span>
            </div>
        }
    </div>
    <div class="col-sm-8 ">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4><strong>Relatórios</strong></h4>
            </div>
            <div class="panel-body panel-scroll">
                <table class="table table-hover">
                    <tr>
                        <td>
                            <h4><a href="@Url.Action("ModalDecMatricula","Relatorio")"><i class="fa fa-file-text fa-fw text-danger" aria-hidden="true"></i>DECLARAÇÃO DE MATRICULA</a></h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4><a href="@Url.Action("ModalHistorico","Relatorio")"><i class="fa fa-file-text fa-fw text-danger" aria-hidden="true"></i>HISTÓRICO DO ALUNO</a></h4>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>