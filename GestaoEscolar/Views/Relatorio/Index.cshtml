@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
}


<div class="panel panel-heading">
    <strong><span class="glyphicon glyphicon-cog"></span><span>&nbsp;</span>Relatórios</strong>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-sm-4">
            @using (@Html.BeginForm("Index", "Aluno", FormMethod.Post))
            {
                <div class="input-group">
                    <input type="text" class="form-control" name="termoBusca" id="termoBusca" placeholder="Buscar por...">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button>
                    </span>
                </div>
            }
        </div>
        <div class="col-sm-8 ">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><strong>Relatórios</strong></h4>
                </div>
                <div class="panel-body panel-scroll">
                    <table class="table table-hover">
                        <tr>
                            <td data-toggle="modal" data-target="#myModalDeclaracaoMatricula">
                                <h4><i class="fa fa-file-text fa-fw text-danger" aria-hidden="true"></i>DECLARAÇÃO DE MATRICULA</h4>
                            </td>
                        </tr>
                        <tr>
                            <td data-toggle="modal" data-target="#myModalHistoricoAluno">
                                <h4><i class="fa fa-file-text fa-fw text-danger" aria-hidden="true"></i>HISTÓRICO DO ALUNO</h4>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Declaração Matricula -->
<div class="modal fade" id="myModalDeclaracaoMatricula" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            @Html.Partial("_ModalDecMatricula")
        </div>
    </div>
</div>
<!-- Modal Historico -->
<div class="modal fade" id="myModalHistoricoAluno" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            @Html.Partial("_ModalHistorico")
        </div>
    </div>
</div>