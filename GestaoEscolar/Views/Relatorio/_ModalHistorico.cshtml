
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Historico Aluno</h3>
</div>


@using (Html.BeginForm("Lista", "Relatorio", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="row">
            <div class="col-lg-offset-1 col-lg-10">
                <div class="editor-label">
                    <strong>Nome do Aluno</strong>
                </div>
                <div class="input-group">
                    <input type="text" id="termo" class="form-control" placeholder="preencha o nome do aluno..." required />
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button>
                    </span>
                </div>
            </div>
        </div>
    </div>


}

<div class="modal-footer">
    <a class="btn btn-primary" title="OK" href="@Url.Action("Historico","Relatorio", new {id = 2})">OK</a>
    <button class="btn btn-default" data-dismiss="modal">Cancelar</button>
</div>
