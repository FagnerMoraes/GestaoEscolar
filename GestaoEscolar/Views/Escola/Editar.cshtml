@model GestaoEscolar.Models.Escola

@{
    ViewBag.Title = "Editar Escola";
    Layout = "~/Views/Shared/_LayoutPadrao.cshtml";
}

<script>
    $(function () {
        $('#UfEscola').val("@Model.UfEscola");
        $('#DistritoEscola').val("@Model.DistritoEscola");
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Id)

    <div class="panel panel-heading">
        <div class="row">
            <div class="col-sm-2">
                <strong><span class="fa fa-plus-sign"></span><span>&nbsp;</span>Editar Escola</strong>
            </div>
            @Html.Partial("_MenuForm")
            <div class="col-sm-3">
                <h5><strong>Atenção!</strong> O campo com <i class="fa fa-asterisk text-danger"></i>é obrigatório</h5>
            </div>
        </div>
    </div>

    @Html.Partial("_PartialFormEscola");

}

