@model IEnumerable < GestaoEscolar.Models.HistoricoAluno>

@{
    ViewBag.Title = "ListaHistoricoAluno";
    Layout = "~/Views/Shared/_LayoutLista.cshtml";
}

<h3>@ViewBag.NomeAluno</h3>

<table class="table table-hover">
    <tr>
        <th>
            Ano do historico
        </th>
        <th>
            Série
        </th>

        <th>
            AÇÕES
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnoHistoricoAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TurmaAnoHistorico)
            </td>

            <td>
                <a class="btn btn-default" title="Editar" href="@Url.Action("Editar", "HistoricoAluno", new {id = item.Id})">
                    <span class="fa fa-edit"></span>
                </a>

                <a class="btn btn-default" title="Detalhes" href="@Url.Action("Detalhes", "HistoricoAluno", new {id = item.Id})">
                    <span class="fa fa-list-alt"></span>
                </a>

                <a class="btn btn-primary btn-danger confirm" title="Excluir" href="@Url.Action("Excluir", "HistoricoAluno", new {id = item.Id})">
                    <span class="fa fa-trash"></span>
                </a>

            </td>
        </tr>
    }

</table>