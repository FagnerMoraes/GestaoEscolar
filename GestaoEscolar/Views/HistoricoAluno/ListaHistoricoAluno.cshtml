@model IEnumerable<GestaoEscolar.Models.HistoricoAluno>

@{
    ViewBag.Title = "ListaHistoricoAluno";
    Layout = "~/Views/Shared/_LayoutLista.cshtml";
}

<div class="row">
    <div class="col-md-9">
        <h3>@ViewBag.NomeAluno</h3>
    </div>
    <div class="col-md-3">
        <a href="@Url.Action("Historico", "Relatorio", new { id = ViewBag.Id })" class="btn btn-block btn-lg btn-default"><span class="fa fa-file-pdf-o text-danger"></span><span>&nbsp;</span>Gerar Historico</a>
    </div>
</div>
<div class="row">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Detalhes","Aluno", new { id = ViewBag.Id })">Aluno</a></li>
        <li class="breadcrumb-item active">Historico</li>
    </ol>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <tr>
            <th colspan="3">
                <a href="@Url.Action("Adicionar", "HistoricoAluno", new { alunoId = ViewBag.Id })" class="btn btn-block btn-lg btn-success"><span class="fa fa-plus"></span><span>&nbsp;</span>Novo Histórico</a>
            </th>
        </tr>
        <tr>
            <th>
                Ano do historico
            </th>
            <th>
                Série
            </th>

            <th>
                AÇÕES
            </th>
        </tr>

        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnoHistoricoAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TurmaAnoHistorico)
            </td>

            <td>
                <a class="btn btn-default" title="Editar" href="@Url.Action("Editar", "HistoricoAluno", new {id = item.Id})">
                    <span class="fa fa-edit"></span>
                </a>

                <a class="btn btn-default" title="Detalhes" href="@Url.Action("Detalhes", "HistoricoAluno", new {id = item.Id})">
                    <span class="fa fa-list-alt"></span>
                </a>

                <a class="btn btn-primary btn-danger confirm" title="Excluir" href="@Url.Action("Excluir", "HistoricoAluno", new {id = item.Id})">
                    <span class="fa fa-trash"></span>
                </a>

            </td>
        </tr>
    }

    </table>
</div>

<script src="~/Scripts/jquery.confirm.js"></script>
<script>
    $(".confirm").confirm({
        text: "Tem certeza que deseja excluir?",
        confirmButton: "Sim",
        cancelButton: "Não"
    });
</script>